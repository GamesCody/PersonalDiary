<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HelloGuiApp.MainWindow"
        Title="Diary"
        Width="800" 
        Height="400"
        MinWidth="500"
        MinHeight="500"
        Background="rgba(104, 129, 141, 1)">
        
    <StackPanel Margin="20 10">

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Classes="button" x:Name="NewEntry" Content="Add new entry"/>
            <Button Classes="button" x:Name="Preferences" Content="Preferences">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuItem Header="Change theme" Click="ChangeTheme_Click"/>
                        <MenuItem Header="-"/>
                        <MenuItem Header="Clear all entries" Click="ClearAll_Click"/>
                        <MenuItem Header="-"/>
                        <MenuItem Header="Export" Click="Export_Click"/>
                        <MenuItem Header="-"/>
                        <MenuItem Header="Set/Change password" Click="ChangePassword_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
            <Button Classes="button" x:Name="Help" Content="Help"/>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="Entry History" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Foreground="rgba(20, 52, 54, 1)"
                       Margin="0,10,0,0"/>

            <Border Margin="5"
                    BorderThickness="1"
                    BorderBrush="rgba(10, 66, 62, 1)"
                    Background="rgba(255, 255, 255, 0.2)"
                    CornerRadius="5"
                    Padding="10">

                <StackPanel x:Name="History">
                    <!-- entries here from MainWindow.axaml.cs -->
                </StackPanel>

            </Border>
        </StackPanel>
        
    </StackPanel>
</Window>
