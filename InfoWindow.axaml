<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HelloGuiApp.InfoWindow"
        Width="400" Height="400"
        MinHeight="400" MinWidth="400"
        MaxHeight="400" MaxWidth="400"
        Title="Help"
        Background="rgba(104, 129, 141, 1)">

    <StackPanel Margin="10">
        <TextBlock Text="Help"
                   FontWeight="Bold" 
                   FontSize="20" 
                   Foreground="rgba(10, 66, 62, 1)"
                   Margin="0,10,0,0"/>

        <StackPanel Margin="10"
                    Spacing="5">
            <TextBlock TextWrapping="Wrap"
                       FontSize="16"
                       Foreground="rgba(10, 66, 62, 1)">
                To get grasp on how to use the program please read the
            </TextBlock>

            <HyperlinkButton Content="manual."
                             NavigateUri="https://futurelink.com"
                             Background="Transparent"
                             BorderBrush="Transparent"
                             Foreground="rgba(10, 66, 62, 1)"
                             Padding="0"
                             FontSize="16"
                             Cursor="Hand" />

            <TextBlock TextWrapping="Wrap"
                       FontSize="16"
                       Foreground="rgba(10, 66, 62, 1)">
                If there are some problems with the software you can reach out to the creator via Github:
            </TextBlock>

            <HyperlinkButton Content="https://github.com/GamesCody"
                             NavigateUri="https://github.com/GamesCody"
                             Background="Transparent"
                             BorderBrush="Transparent"
                             Foreground="rgba(10, 66, 62, 1)"
                             Padding="0"
                             FontSize="16"
                             Cursor="Hand" />

            <TextBlock TextWrapping="Wrap"
                       FontSize="16"
                       Foreground="rgba(10, 66, 62, 1)">
                or email:
            </TextBlock>

            <HyperlinkButton Content="codyurlik@hotmail.com"
                             NavigateUri="mailto:codyurlik@hotmail.com"
                             Background="Transparent"
                             BorderBrush="Transparent"
                             Foreground="rgba(10, 66, 62, 1)"
                             Padding="0"
                             FontSize="16"
                             Cursor="Hand" />
        </StackPanel>
    </StackPanel>
</Window>
