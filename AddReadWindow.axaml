<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HelloGuiApp.AddReadWindow"
        Width="450" Height="600"
        MinHeight="600" MinWidth="450"
        Title="Entry"
        Background="rgba(104, 129, 141, 1)"
        >
    <StackPanel Margin="10">
        <TextBlock Text="Title:"
                    FontWeight="Bold" 
                    FontSize="20" 
                    Foreground="rgba(10, 66, 62, 1)"
                    Margin="0,10,0,0"/>
        <TextBox x:Name="EntryTitle" Text="" Margin="0,5" TextWrapping="Wrap"/>
        
        <TextBlock Text="Your entry:"
                    FontWeight="Bold" 
                    FontSize="20" 
                    Foreground="rgba(10, 66, 62, 1)"
                    Margin="0,10,0,0"
                    />
        <TextBox x:Name="EntryText"  Text="" Margin="0,5" Height="300" TextWrapping="Wrap" />
        <StackPanel>
            <TextBlock x:Name="CharCounter"
               FontSize="12"
               Foreground="Black"
               FontWeight="Bold" 
               HorizontalAlignment="Left"
               Text="0/2048"/>
        </StackPanel>
    </StackPanel>
</Window>
